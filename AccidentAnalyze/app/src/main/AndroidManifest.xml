<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.merachi7.accidentanalyze" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AccidentAnalyze" >
        <activity
            android:name=".activity.MethodActivity"
            android:exported="true"
            android:label="@string/method_title" />
        <activity
            android:name=".activity.MethodDataSettingActivity"
            android:exported="true"
            android:label="@string/data_header"/>
        <activity
            android:name=".activity.DashboardActivity"
            android:exported="true"
            android:theme="@style/BlankTheme" />
        <activity
            android:name=".activity.SettingActivity"
            android:exported="false"
            android:label="@string/setting_title" />
        <activity
            android:name=".activity.DataSettingActivity"
            android:exported="false"
            android:label="@string/data_header"/>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/BlankTheme" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/BlankTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>