<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/csvfile_header"/>

        <EditTextPreference
            android:defaultValue="@string/csvfile_default"
            app:key="csv_upload"
            app:title="@string/csvfile_title"
